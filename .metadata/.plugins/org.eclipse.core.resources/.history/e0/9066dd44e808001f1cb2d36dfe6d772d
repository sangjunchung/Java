package ncs.test3;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Scanner;

public class CalendarTest {

	public static void main(String[] args) throws ParseException {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("날짜를 입력해주세요.");
		System.out.print("년 : ");
		int year = sc.nextInt();
		System.out.print("월 : ");
		int month = sc.nextInt();
		System.out.print("일 : ");
		int day = sc.nextInt();
		
		String ymd = Integer.toString(year)+Integer.toString(month)+Integer.toString(day);
		System.out.println(ymd);
		SimpleDateFormat sd = new SimpleDateFormat("yyyy년 M월 dd일 EEEE");
		
		System.out.println("입력된 날짜에 대한 정보는 아래와 같습니다.");
		System.out.println(sd.parse(ymd));
		
		sc.close();
	}
}
